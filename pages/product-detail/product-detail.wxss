/*底部的bar   */
.bottom-bar{
  justify-content: flex-start;
  padding: 14rpx 30rpx;
  padding-right: 0;
  position: fixed;
  bottom: 0;
  width: 100%;
}
.bottom-bar image{
  width: 44rpx;
}
.bottom-bar .cell-line{
  padding-right:45rpx;
  padding-left:15rpx;
  text-align: center;
  line-height:26rpx;
  box-sizing: border-box;
  width: 130rpx;
}
.bottom-bar>view>view{
  font-size: 22rpx;
}
.add-cart,.buy-btn{
  width: 220rpx;
	height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  text-align: center;
  font-size: 28rpx;
  background-blend-mode: normal, normal;
}
.add-cart{
	background-image: linear-gradient(90deg, 	#ffb607 0%, #ff8400 100%), 
	linear-gradient(#ffffff, 	#ffffff);
	border-radius: 40rpx 0px 0rpx 40rpx;
}
.buy-btn{  
	background-image: linear-gradient(90deg, #ff6c00 0%, #e60012 100%), 
	linear-gradient(#ffffff, #ffffff);
	border-radius: 0px 40rpx 40rpx 0px;
}
.gift-btn{
  width: 440rpx;
  border-radius: 40rpx;
}
.gift-btn-view{
  justify-content: center;
}
/*置顶  */
.goTop{
  position: fixed;
  right: 30rpx;
  bottom: 120rpx;
  background-color: rgba(255, 255, 255, 0.9);
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  border: 1rpx solid #eee;
  overflow: hidden;
  text-align: center;
  font-size: 22rpx;
  box-sizing: border-box;
  padding-top: 14rpx;
}
.goTop image{
  vertical-align: middle;
  width: 40rpx;
}

/*topbar  */
.topbar image{
  width: 76rpx;
  height: 76rpx; 
}
.topbar{
  height: 90rpx;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 9999;
  border-bottom: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
}
.msg-view{
  width: 100rpx;
  height: 100%;
  position: absolute;
  right: 0rpx;
}
.msg-view:after{ 
  content:"";
  width: 8rpx;
  height: 40rpx;
  position: absolute;
  border-left: 8rpx dotted #222;
  right: 50rpx;
  top:25rpx;
}

/*table的样式  */
.table-view{
  text-align: center;
  padding:30rpx;
}
.table {
  width: 99%;
  border: 1rpx solid #ddd;
  border-collapse:collapse;
  font-size: 24rpx;
  table-layout:fixed;
  white-space: normal;
  word-break:break-all;
}
.table .td.frist-td{
  background: #F8F8F8;
  width: 24%;
  color: #222;
  overflow: hidden
}
.table .td2{
  width: 76%;
  color: #999999;
  height: 80rpx;
  text-align: left;
  padding-left: 30rpx;
  overflow: hidden
}
.table .tr{
  border: 1rpx solid #ddd;
}

.cell-name{
  color: #999;
  margin-right: 64rpx;
}
.cell-content,.tips{
  width:500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.tips-content{
  color: #666;
  padding: 60rpx;
}

.tips-title{
  margin: 60rpx auto auto 50rpx; 
  text-align: center;
}
.first-tips{
  margin-bottom: 28rpx;
}
<view class='prduct-detail-view'>
  <view class='slider'>
    <!--广告轮播  -->
    <view class='slider-nav overflow boxSize'>
      <image src='/img/back-icon.png' mode='widthFix' class='fl'></image>
      <image src='/img/msg-icon.png' mode='widthFix' class='fr'></image>
    </view>
    <swiper autoplay="true" interval='3000' bindchange='sliderChange'>
      <block wx:for="{{imgUrls}}" wx:key="unique">
        <swiper-item>
          <image src="{{item}}" class="slide-image"/>
        </swiper-item>
      </block>
    </swiper>
    <view wx:if='{{imgUrls.length>0}}' class="activeIndex">
      {{activeIndex+"/"+ imgUrls.length}}
    </view>
  </view>
  <!-- 产品信息 -->
  <view class='prd-info boxSize'>
    <view class='prd-name ellipsis-2'>哈哈哈哈哈 端午节回家咯 哈哈哈 哈哈哈 12232323哈哈哈为何物号和我IDhis电话死后</view>
    <view class='price'>
      <text class='price1 red'>¥ 1889.99</text>
      <text class='price2 gray'>¥ 2600.00</text>
      <text class='label-pd'>拼店价</text>
      <text class='price3 red'>积分价：¥ 1869.99</text>
    </view>
    <view class='shippingInfo gray'>
      <text style='margin-right:158rpx'>快递：0.00</text>
      <text>月销售100000笔</text>
    </view>
  </view>
  <!--产品规格选择  -->
  <view class='chooseBox'>
    <view>
      <product-specification></product-specification >
    </view>
    <view class='gray'>
      <text class='label red' >服务</text>
      正品保障*急速发货 2小时内发货
    </view>
  </view>
  <!--产品图文详情切换  -->
  <view  class='prd-info-box'>
    <view class='prd-info-line'>
      <view class='first-line' bindtap='infoChoose' data-show='1'>
        <text class='{{show? "red":""}}'>详情</text>
      </view>
      <view bindtap='infoChoose' data-show='2'>
        <text class='{{!show? "red":""}}'>参数</text>
      </view>
    </view>
    <view  class='prd-info-cell' bindtap='infoChoose'>
      <view wx:if='{{show}}'>1111</view>
      <view wx:else>2222</view>
    </view>
  </view>
</view>

<import src='/pages/topic/temp/topic-prd-info/topic-prd-info.wxml'/>

<import src='/pages/topic/temp/topic-bar/topic-bar.wxml'/>

<template name="topic-temp1">
  <!--导航  -->
  <template is="topic-bar" data="{{topicDetailList,scrollLeft,currentTab}}"/>
  <!--产品 -->
  <view class='topic-prd-content topic-temp1'>
    <block wx:for='{{topicDetailList[currentTab].product}}' wx:key='unique'>
      <template is="topic-prd-info" data="{{width:'330',bg:'#fff',ellipsis:'ellipsis',...item}}"/>
    </block>
  </view>
  <block wx:for='{{topicDetailList[currentTab].banner}}'  wx:key='unique'>
    <view class='topic-banner topic-temp2'>
      <image src='{{item.img}}'></image>
    </view>
    <view class='topic-prd-content topic-temp1'>
      <block wx:for='{{topicDetailList[currentTab].product}}' wx:for-item="list" wx:for-index='key'  wx:key='unique'>
        <template is="topic-prd-info" data="{{width:'330',bg:'#fff',ellipsis:'ellipsis',...list}}"/>
      </block>
    </view>
  </block>
</template>
.cash{
    padding: 20rpx 30rpx;
}
.item{
    width: 100%;
    height: 280rpx;
    color: #fff;
    margin-bottom: 20rpx;
    position: relative;
    background: url("https://dnlcrm.oss-cn-beijing.aliyuncs.com/xcx/icon08_03@2x.png") no-repeat top center;
    background-size: cover;
}
.title{
    font-size: 26rpx;
    position: absolute;
    top:30rpx;
    left: 30rpx;
}
.num{
    font-size: 48rpx;
    margin: 60rpx;
    position: absolute;
    top:50rpx;
    left: 50rpx;
}
.btn{
    width: 200rpx;
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 10rpx;
    border: solid 1rpx #ffffff;
    font-size: 28rpx;
    color: #fff;
    text-align: center;
    position: absolute;
    bottom:75rpx;
    right: 50rpx;
}
.explain{
    font-size: 22rpx;
    position: absolute;
    bottom:30rpx;
    right: 90rpx;
}
.explain image{
    width: 26rpx;
    height: 26rpx;
    margin-right: 5rpx;
    vertical-align: middle;
    margin-top: -1rpx;
}
.list-item{
    display: flex;
    /* justify-content: space-around; */
    background: #fff;
    width: 100%;
    margin-bottom: 2rpx;
    padding: 30rpx;
    position: relative;
    box-sizing: border-box;
}
.list-item image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background-color: #ff7e00;
    margin-top: 10rpx;
    margin-right: 30rpx;
}
.style{
    font-size: 30rpx;
    color: #222222;
}
.money{
    font-size: 36rpx;
    color: #222222;
    position: absolute;
    right: 30rpx;
}
.add{
    color: #e60012;
}
.time{
    margin: 10rpx 0;
}
.time,.number{
    font-size: 26rpx;
    color: #999999;
}
.number image{
    width: 26rpx;
    height: 26rpx;
    background-color: #fff;
    vertical-align: middle;
    margin-right: 10rpx;
    margin-top: -5rpx;
}
.detail{
    width: 45%;
}
/*弹窗*/
.mask{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.3);
}
.content{
    width: 80%;
    height: 720rpx;
    background: #fff;
    border-radius: 10rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.header{
    background: url("https://dnlcrm.oss-cn-beijing.aliyuncs.com/xcx/dhk_07@2x.png") no-repeat top center;
    background-size: cover;
    width: 100%;
    height: 165rpx;
    line-height: 165rpx;
    font-size: 36rpx;
    color: #ffffff;
    text-align: center;
}
.info{
    padding: 40rpx 40rpx 0;
}
.question{
    font-size: 30rpx;
    color: #000000;
}
.answer{
    font-size: 26rpx;
    color: #666666;
    margin-bottom: 20rpx;
}
.special{
    color: #e60012;
}
.close{
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top:18%;
    right:5%;
}
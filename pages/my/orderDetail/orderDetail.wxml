<import src='/components/my-order-product-info/my-order-product-info.wxml' />

<import src='/components/address-info/address-info.wxml' />

<import src='/components/tips-cancel-order/tips-cancel-order.wxml' />

<import src='/components/tips-delete-order/tips-delete-order.wxml' />

<view class='orderDetail'>
  <view class='order-state boxSize'>
    <view class='order-state-icon'>
      <view class='order-status'>等待买家付款</view>
      <view class='timeDown'>{{countdown}}</view>
    </view>
  </view>
  
  <!--订单的物流状态  -->
  <view class='order-state-info'>
    <view class='boxSize'>
      <!--等待付款的时候显示和代发货  -->
      <!-- <template is="address-info" data='{{addressType}}'/> -->

      <!-- 已发货的时候显示 -->
      <view class='logistics flexR-sb'>
        <view>
          <view class='info'>仓库正在烧苗出仓</view>
          <view class='gray'>2018-04-15 12:45:45</view>
        </view>
        <view class='right-icon'>
          <image src='/img/common-accessory-icon.png' mode='widthFix'></image>
        </view>
      </view>
    </view>
  </view>

  <view class='container'>
    <!--地址信息 如果发货了 显示地址 -->
    <view class='my-order-address'>
      <template is="address-info" data='{{addressType,src}}'/>
    </view>

    <!--订单信息  -->
    <view class='order-prd-info'>
      <block>
        <template is="my-order-product-info"  />
        <view class='sale-after flexR'>
          <view class='order-btn btn-left flexR'>删除订单</view>
        </view>
      </block>
    </view>

    <!-- 商品价格等信息 -->
    <view class='order-pay-info gray boxSize'>
      <view class='flexR-sb'>
          <text>商品价格</text>
          <text>¥20</text>
      </view>
      <view class='flexR-sb'>
          <text>运费（快递）</text>
          <text>¥20</text>
      </view>
      <view class='flexR-sb'>
          <text>优惠券优惠</text>
          <text>-¥20</text>
      </view>
      <view class='flexR-sb'>
          <text>积分抵扣</text>
          <text>-¥20</text>
      </view>
      <view class='flexR-sb total'>
          <text>订单总价</text>
          <text>¥20</text>
      </view>
      <view class='flexR-sb total totalPay'>
          <view class='popup'>
            <view></view>
          </view>
          <text >需付款</text>
          <text class='red'>¥20</text>
      </view>
    </view>

    <!--订单付款信息  -->
    <view class='order-create-info '>
      <!--复制按钮  -->
      <view class='copy-btn gray flexR'>复制</view>
      <view class='content gray'>
        <view>订单编号：4545515613165465464</view>
        <view>创建时间：2018-05-14 12:15:</view>
        <view>平台付款时间：2018-05-14 12:15:</view>
        <view>三方付款时间：2018-05-14 12:15:</view>
        <view>微信交易号：2东方航空电话费肯定会</view>
        <view>发货时间：2018-05-14 12:15:</view>
        <view>成交时间：2018-05-14 12:15:</view>
      </view>
    </view>
   
  </view>

  <!--order bar  -->

  <view class='order-bar flexR boxSize'>
    <view class='order-btn btn-left flexR'>删除订单</view>
    <view class='order-btn red flexR'>再次购买</view>
  </view>
</view>


 <!--提示框  -->
  <template is="tips-cancel-order" data='{{isCancel}}'/>

  <template is="tips-delete-order" data='{{isDelete}}'/>

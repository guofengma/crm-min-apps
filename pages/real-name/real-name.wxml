<view class="realName">
  <view class='imgView'>
    <image src='../../img/realname-bg.png' mode="widthFix"></image>
  </view>
  <form bindsubmit="formSubmit">
    <input type='text' name='name' placeholder="请输入姓名" placeholder-style='color:#c8c8c8'></input>
    <input type='text' name='IDcard' placeholder="请输入身份证号码" placeholder-style='color:#c8c8c8' ></input>
    <view class='form-group'>

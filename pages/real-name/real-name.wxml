        <view class="picker"  wx:if='{{region.length>0}}'placeholder-style='color:#c8c8c8'>
          当前选择：{{region[0]}}-{{region[1]}}-{{region[2]}}
        </view>
        <view wx:else class='tips'>请选择你所在的省市区</view>

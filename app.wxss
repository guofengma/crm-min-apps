page{
  height: 100%;
  background-color:#F8F8F8;
}
button[disabled]:not([type]) {
  background-color: #dddddd;
}

.flexR{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:center; 
}
.flexC{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:center;
}
.boxSize{
  box-sizing: border-box;
}
button::after{
  border: none;
}
.fl{
  float: left
}
.fr{
  float: right;
}
.overflow{
  overflow: hidden
}
image{
  width: 100%;
}
.logo{
  width: 130rpx;
  height: 130rpx;
  background: #fff;
  border-radius: 130rpx;
}
.loginBtn{
  width:580rpx;
  height:96rpx;
  line-height: 96rpx;
  background-color: #e60012;
  color: #fff;
  font-size: 28rpx;
}
.flexR>text{
  height: 1.4rem;
  line-height: 1.4rem;
}
.form input{
  margin-left: 45rpx;
  width:380rpx;
}
/*溢出省略号  */
.ellipsis{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.ellipsis-2{
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  line-height:38rpx;
}
.pwdImg{
  width: 40rpx;
}
.tips-view{
  padding: 30rpx 40rpx;
  color: #c8c8c8;
}